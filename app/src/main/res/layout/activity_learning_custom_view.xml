<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.charry.xandroid.ui.customview.LearningCustomViewActivity">


    <LinearLayout
        android:background="#66666666"
        android:layout_width="300dp"
        android:layout_margin="10dp"
        android:layout_height="500dp">


        <com.charry.xandroid.ui.customview.RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gradeNumber="5"
            app:starFocus="@drawable/star_selected"
            app:starNormal="@drawable/star_normal" />

    </LinearLayout>

    <com.charry.xandroid.ui.customview.ShapeView
        android:id="@+id/shape_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:visibility="gone" />

</LinearLayout>
